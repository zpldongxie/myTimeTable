/* components/dualContainer/index.wxss */
page {
	padding: 0;
}
/* 总容器 */
.movable-area-con{
	height: 100%;
	width: 100%;
}
.top {
	width: 100%;
	transition: height 0.5s;
	padding: 30rpx 10rpx 40rpx;
}

.bottom {
	width: 100%;
	transition: height 0.5s;
	padding: 30rpx 10rpx 40rpx;
}

.divider {
	width: 100%;
	position: absolute;
	left: 0;
	top: 50%;
	text-align: center;
	margin-top: -34rpx;
}

.divider .text {
	display: inline-block;
	background-color: #f0f0f0;
	border: 5rpx solid #E0E3DA;
	color: #757575;
	border-radius: 1rem;
	padding: 10rpx;
	font-size: 20rpx;
}

.divider .divLine {
	background: #E0E3DA;
	width: 100%;
	height: 8rpx;
	margin-top: -28rpx;
}