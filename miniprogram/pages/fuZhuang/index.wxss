.title {
  text-align: center;
  font-weight: bold;
  color: #4e7c61;
  font-size: 50rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  margin-bottom: 10rpx;
  margin-top: 2vh;
}
.subTitle {
  font-size: 25rpx;
  color: #8ea397;
}

.imageContainer {
  margin-top: 2vh;
  width: 100%;
  height: 1200rpx;
}

.item {
  background-color: rgba(200, 200, 200, 0.3);
  padding: 20rpx 0;
}

.subItem {
  background: linear-gradient(135deg, #001f3f, #0088a9, #00c9a7, #92d5c6, #ebf5ee);
  width: 90%;
  height: 250rpx;
  border-radius: 15rpx;
  opacity: 0.95;
  margin: 40rpx 30rpx 0;
  transition: height 0.2s;
  margin-bottom: 10px;
}

.itemImg {
  max-width: 100%;
  max-height: 100%;
}

.active {
  opacity: 1;
  height: 300rpx;
  margin-top: 0;
  transition: all 0.2s ease-in 0s;
  box-shadow: 5px 5px 10px rgba(100, 100, 100, 0.2);
}

.itemDay {
  text-align: center;
  font-weight: bold;
  color: #6ca083;
  font-size: 40rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  margin-bottom: 10rpx;
}
.itemText {
  width: 90%;
  text-align: center;
  margin: 0 30rpx 10rpx;
  border-radius: 30rpx;overflow: hidden;
  padding: 10rpx 0;
  background-color: rgba(255, 255, 255, 0.8);
}
.itemText view {
  color: #4e7a61;
  font-size: 30rpx;
  white-space: nowrap;
}
