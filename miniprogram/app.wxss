/**app.wxss**/
page,
.contaner {
  width: 100vw;
  height: 100vh;
  background: #daeef9;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  font-weight: 400;
  font-size: 32rpx;
  padding: 10rpx;
  /* background-image: url(https://636c-cloud1-8ggb0v441269ef28-1319420876.tcb.qcloud.la/bg/bg.jpg?sign=a831f8fbc92a96d88e7de5de3296bafc&t=1708318230); */
  background-size: cover;
  background-position: center;
}

page {
  padding: 0;
}

page view {
  box-sizing: border-box;
}

.loading {
  position: fixed;
  z-index: 1000;
  top: 40%;
  transform: translate(0, -50%);
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(0, 0, 0, 0.1);
  padding: 10px;
  border-radius: 5px;
  max-width: 50%;
}

.subCon {
  width: 100%;
  margin: 12rpx 0;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.4);
  box-shadow: 1px 2px 8px rgba(91, 141, 129, 0.3);
}

.a,
button.a {
  color: #33f;
  display: inline;
  padding: 0;
  font-weight: unset;
  font-size: unset;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.button {
  width: 300rpx;
  text-align: center;
  margin: 20rpx auto 0 auto;
  height: 80rpx;
  color: white;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: #07c160;
}

.tips {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
}